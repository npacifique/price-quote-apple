@model Quote

@{
    ViewData["Title"] = "Price Quotation";
}


<form asp-action="Edit" method="POST">
    <div class="col-12 text-danger" asp-validation-summary="All" ></div>

    <div class="form-group row">
        <label  class="col-2" for="Total">Subtotal</label>
        <input  class="col-2 form-control" type="text" name="Total"  />
    </div>

    <div class="form-group row">
        <label  class="col-2" for="Discount">Discount Percent</label>
        <input  class="col-2 form-control" type="text" name="Discount" />
    </div>

    <div class="form-group row">
        <span class="col-2">Discount Amount</span>
        <span class="col-2">@Model.GetDiscount().ToString("C2")</span>
    </div>

    <div class="form-group row">
        <span class="col-2">Total </span>
        <span class="col">@Model.GetTotal().ToString("C2")</span>
    </div>

    <div class="form-group row">
        <div class="col">
            <button class="btn btn-primary" type="submit">Calculate</button>
            <a class="btn" asp-controller="Home" asp-action="Index">Cencel</a>
        </div>
    </div>
</form>
    
    