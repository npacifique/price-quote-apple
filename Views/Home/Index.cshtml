@model QuoteModelView

@{
    ViewData["Title"] = "Price Quotation";
    
}

<form   asp-action="Edit" method="POST">
    @* <div class="col-12 text-danger" asp-validation-summary="All" ></div> *@

    <div class="form-group">
        <div class="row">
            <div class="col-lg-2">
                <label  class="" for="Total">Subtotal</label>
            </div>
            <div class="col-lg-3 col-md-auto">
                <input class="form-control" name="Total" />
            </div>
            <div  class="text-danger" as-validation-for="Total"></div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-lg-2">
                 <label class="" for="Discount">Discount Percent</label>
            </div>
            <div class="col-lg-3 col-md-auto ">
                <input class="form-control" name="Discount" />
            </div>
            <div  class="text-danger" asp-validation-for="Discount"></div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-2">
                <label>Discount Amount</label>
            </div>
            <div class="col-md-3">
                <p> @Model.Quote.GetDiscount().ToString("C2")</p>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-2">
                <label >Total</label>
            </div>
           <div class="col-md-3 ">
                <p>@Model.Quote.GetTotal().ToString("C2")</p>
           </div>
        </div>
    </div>

    <div class="form-group">
        <div class="">
            <button class="btn btn-primary" type="submit">Calculate</button>
            <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Cencel</a>
        </div>
    </div>
</form>
    
    